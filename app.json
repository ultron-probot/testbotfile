{
  "name": "Telegram Reward & File Sharing Bot",
  "description": "Telegram bot with referral rewards, force join, admin panel, MongoDB storage and secure file sharing system",
  "repository": "https://github.com/yourusername/your-repo-name",
  "keywords": [
    "telegram",
    "pyrogram",
    "reward-bot",
    "file-sharing-bot",
    "mongodb",
    "heroku"
  ],
  "env": {
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org (numeric)",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API HASH from my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Bot token from @BotFather",
      "required": true
    },
    "OWNER_ID": {
      "description": "Numeric Telegram user ID of bot owner",
      "required": true
    },
    "LOG_GROUP": {
      "description": "Log group or channel ID (example: -100xxxxxxxxxx). Bot must be admin.",
      "required": true
    },
    "START_IMAGE": {
      "description": "Telegraph image link for /start message",
      "required": true
    },
    "JOIN1": {
      "description": "Force join channel/group link 1 (optional)",
      "required": false
    },
    "JOIN2": {
      "description": "Force join channel/group link 2 (optional)",
      "required": false
    },
    "JOIN3": {
      "description": "Force join channel/group link 3 (optional)",
      "required": false
    },
    "MONGO_URI": {
      "description": "MongoDB Atlas connection URI",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
