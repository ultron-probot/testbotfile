{
  "name": "Telegram Reward Bot",
  "description": "Referral based reward Telegram bot with force join, admin panel, broadcast and premium claim system",
  "repository": "https://github.com/yourusername/your-repo-name",
  "keywords": [
    "telegram",
    "pyrogram",
    "reward-bot",
    "referral-bot",
    "heroku"
  ],
  "env": {
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API HASH from my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Bot token from @BotFather",
      "required": true
    },
    "OWNER_ID": {
      "description": "Telegram numeric user id of bot owner",
      "required": true
    },
    "LOG_GROUP": {
      "description": "Log group/channel ID (example: -100xxxxxxxxxx)",
      "required": true
    },
    "START_IMAGE": {
      "description": "Telegraph image link for /start message",
      "required": true
    },
    "JOIN1": {
      "description": "Force join channel/group link 1",
      "required": false
    },
    "JOIN2": {
      "description": "Force join channel/group link 2",
      "required": false
    },
    "JOIN3": {
      "description": "Force join channel/group link 3",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
